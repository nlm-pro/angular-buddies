{
  "name": "@angular-buddies/repo",
  "version": "0.5.0",
  "description": "Add Prettier to your Angular CLI projects.",
  "scripts": {
    "lerna": "lerna",
    "test": "lerna run test",
    "build": "lerna run build",
    "commit": "commit",
    "preversion": "lerna run test",
    "version": "standard-changelog && git add CHANGELOG.md",
    "prettify": "prettier --write ./**/*.{json,css,scss,md,js,ts}",
    "precommit": "lint-staged",
    "clean": "git clean -f",
    "postinstall": "lerna bootstrap"
  },
  "private": true,
  "author": "Noël Macé <contact@noelmace.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "@commitlint/prompt-cli": "^7.2.1",
    "@schematics/angular": "^7.0.3",
    "@types/jasmine": "^2.6.0",
    "@types/node": "^10.12.0",
    "husky": "^0.14.3",
    "jasmine": "^3.2.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1",
    "standard-changelog": "^2.0.1",
    "typescript": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  }
}
