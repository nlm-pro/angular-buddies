{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsPrettierConfig",
  "title": "Prettier Config Options Schema",
  "type": "object",
  // keep in sync with init/schema.json
  "properties": {
    "singleQuote": {
      "type": "boolean",
      "description": "See https://prettier.io/docs/en/options.html#quotes",
      "default": true,
      "x-prompt": "Use single quotes instead of double quotes?"
    },
    "printWidth": {
      "type": "number",
      "description": "See https://prettier.io/docs/en/options.html#quotes",
      "default": 120,
      "x-prompt": "What line length do you want to configure? (default 120)"
    }
  },
  "required": []
}
