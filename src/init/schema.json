{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsPrettierConfig",
  "title": "Prettier Config Options Schema",
  "type": "object",
  "properties": {
    "skipScript": {
      "type": "boolean",
      "description": "Skip prettier execution scripts install.",
      "default": false
    },
    "skipInstall": {
      "type": "boolean",
      "description": "Skip prettier depencies install.",
      "default": false
    },
    "hook": {
      "type": "boolean",
      "description": "Add precommit hook.",
      "default": true
    },
    // Config options
    "singleQuote": {
      "type": "boolean",
      "description": "See https://prettier.io/docs/en/options.html#quotes",
      "default": true
    },
    "printWidth": {
      "type": "number",
      "description": "See https://prettier.io/docs/en/options.html#print-width",
      "default": 120
    }
  },
  "required": []
}
