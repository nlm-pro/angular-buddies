{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "description": "Add Prettier and all associated files and scripts to the workspace.",
      "factory": "./init/index#init",
      "schema": "./init/schema.json",
      "aliases": ["prettier-init"]
    },
    "prettier-config": {
      "description": "Add Prettier configuration files.",
      "factory": "./config/index#config",
      "schema": "./config/schema.json"
    },
    "prettier-hook": {
      "description": "Add a prettier pre-commit hook.",
      "factory": "./hook/index#hook",
      "schema": "./hook/schema.json"
    }
  }
}
